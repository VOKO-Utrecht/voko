# Production Environment Variables for Voedselkollektief Amersfoort
# Copy to .env in your deployment repository

# Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ENV=production
VOKO_ENV=vokoa.settings.container

# Database
POSTGRES_DB=voko
POSTGRES_USER=voko
POSTGRES_PASSWORD=your-password
POSTGRES_HOST=db

# Email
DEFAULT_FROM_EMAIL=Voedselkollektief Amersfoort <info@voedselkollektief.nl>
SERVER_EMAIL=server@voedselkollektief.nl
ADMIN_EMAIL=ict@voedselkollektief.nl
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Site
BASE_URL=https://leden.voedselkollektief.nl
ALLOWED_HOSTS=leden.voedselkollektief.nl,localhost

# Services
MOLLIE_API_KEY=your-mollie-key
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key
